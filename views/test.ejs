<% layout('layouts/boilerplate') %>




<main class="container my-5 pt-5">
    <% if (!started) { %>
        <div class="text-center mb-5">
            <h1 class="display-5 fw-bold text-dark mb-3">Ready to begin, <%= currentUser.username %>?</h1>
            <p class="text-muted mb-4">Level: <span class="badge bg-primary rounded-pill"><%= currentUser.qualification %></span></p>
            
            <form action="/start-test" method="POST">
                <button type="submit" class="btn btn-primary btn-lg px-5 py-3 rounded-pill shadow fw-bold">
                    Confirm & Start Now
                </button>
            </form>
        </div>

        <div class=
        "row g-4 mt-2">
            <h2 class="text-center fw-bold mb-4 text-primary">Important Guidelines</h2>
            <div class="col-md-4">
                <div class="card feature-card h-100 border-0 shadow-sm p-4 text-center">
                    <div class="fs-1 mb-2">‚è±Ô∏è</div>
                    <h5 class="fw-bold">Time Management</h5>
                    <p class="small text-muted">Focus on speed and accuracy. Do not refresh once started.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card feature-card h-100 border-0 shadow-sm p-4 text-center">
                    <div class="fs-1 mb-2">üîá</div>
                    <h5 class="fw-bold">Focus Area</h5>
                    <p class="small text-muted">A quiet environment ensures maximum concentration.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card feature-card h-100 border-0 shadow-sm p-4 text-center">
                    <div class="fs-1 mb-2">üö´</div>
                    <h5 class="fw-bold">No Assistance</h5>
                    <p class="small text-muted">Calculators or search engines invalidate your score.</p>
                </div>
            </div>
        </div>

    <% } else { %>
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg border-0 p-5 rounded-4">
                    <h2 class="text-center mb-4 fw-bold">IQ Assessment In Progress</h2>
                    <form action="/submit-test" method="POST">
                        <% questions.forEach((q, index) => { %>
                            <div class="mb-5 p-4 bg-light rounded-3">
                                <h5 class="fw-bold mb-3">Question <%= index + 1 %>:</h5>
                                <p class="fs-5 mb-4"><%= q.question %></p>
                                
                                <div class="options-grid">
                                    <% [1, 2, 3, 4].forEach(i => { %>
                                        <div class="form-check custom-option mb-2">
                                            <input class="form-check-input" type="radio" name="<%= q.id %>" value="<%= i %>" id="q<%= q.id %>o<%= i %>" required>
                                            <label class="form-check-label w-100" for="q<%= q.id %>o<%= i %>">
                                                <%= q['option' + i] %>
                                            </label>
                                        </div>
                                    <% }) %>
                                </div>
                            </div>
                        <% }) %>
                        <button type="submit" class="btn btn-success w-100 btn-lg fw-bold rounded-pill">Submit Answers</button>
                    </form>
                </div>
            </div>
        </div>
    <% } %>
</main>
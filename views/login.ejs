<% layout('layouts/boilerplate') %>

<body class="auth-body">

<div class="auth-container wide"> 
  <div class="auth-left gradient-alt">
    <h1>Welcome Back</h1>
    <p>
      Unlock your potential.<br>
      Access your IQ history.<br>
      Compare your global rank.
    </p>
  </div>

  <div class="auth-right">
    <h2>Login to IntelliTest</h2>

    <% if (typeof error !== 'undefined' && error.length) { %>
      <div class="alert alert-danger py-2" style="border-radius: 12px; font-size: 0.85rem;">
        <%= error[0] %>
      </div>
    <% } %>

    <form action="/login" method="POST">
      <div class="mb-3">
        <label class="form-label small fw-bold text-muted">Email address</label>
        <input type="email" name="email" class="form-control" placeholder="name@example.com" required>
      </div>
      
      <div class="mb-3">
        <label class="form-label small fw-bold text-muted">Password</label>
        <input type="password" name="password" class="form-control" placeholder="Enter your password" required>
      </div>

      <button type="submit" class="btn btn-glow full mt-3">Login</button>
    </form>

    <p class="auth-switch">
      Donâ€™t have an account? 
      <a href="/register">Create one here</a>
    </p>
  </div>
</div>

</body>